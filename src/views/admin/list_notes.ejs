<%- layout('layouts/main.ejs') %>

<div class="row">
	<% if (data.length > 0) { -%>
		<% for(var i=0; i < data.length; i++) { -%>
			<div class="col-md-3">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title d-flex justify-content align-item-cnter"><%= data[i].get('title') %>
							<a href="/notes/edit-note/<%= data[i].id %>"><i class="fas fa-edit"></i></a></h4>
						<p><%= data[i].get('description') %></p>
						<button class="btn btn-danger btn-block btn-sm">Eliminar</button>
					</div>
				</div>
			</div>
		<% } -%>
	<% } else { -%>
		<div class="card mx-auto">
			<div class="card-body">
				<p class="lead">No hay notas aÃºn</p>
				<a href="/notes/add-note" class="btn btn-success btn-block btn-sm">Crear Nota</a>
			</div>
		</div>
	<% } -%>
	
</div>